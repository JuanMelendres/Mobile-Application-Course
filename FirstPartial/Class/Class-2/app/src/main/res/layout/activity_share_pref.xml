<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharePrefActivity">

    <EditText
        android:id="@+id/valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Valor"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cargar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="47dp"
        android:onClick="cargar"
        android:text="cargar prefs"
        app:layout_constraintEnd_toEndOf="@+id/valor"
        app:layout_constraintTop_toBottomOf="@+id/valor" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="42dp"
        android:onClick="guardar"
        android:text="guardar prefs"
        app:layout_constraintEnd_toEndOf="@+id/valor"
        app:layout_constraintTop_toBottomOf="@+id/cargar" />

    <Button
        android:id="@+id/imprimir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="imprimir"
        android:text="imprimir prefs"
        app:layout_constraintEnd_toEndOf="@+id/guardar"
        app:layout_constraintTop_toBottomOf="@+id/guardar" />

    <Button
        android:id="@+id/campo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:onClick="borrarCampo"
        android:text="borrar campo"
        app:layout_constraintEnd_toEndOf="@+id/imprimir"
        app:layout_constraintTop_toBottomOf="@+id/imprimir" />

    <Button
        android:id="@+id/todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="5dp"
        android:onClick="borrarTodo"
        android:text="borrar todo"
        app:layout_constraintEnd_toEndOf="@+id/campo"
        app:layout_constraintTop_toBottomOf="@+id/campo" />

</androidx.constraintlayout.widget.ConstraintLayout>